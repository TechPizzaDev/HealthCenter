<Window x:Class="HealthCenter.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCenter.Views"
        mc:Ignorable="d"
        Title="Health Center - Admin" Height="500" Width="800">
    <Grid>
        <!--Button Content="Query Tool" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Click="QueryToolButton_Click" /-->
        <Button Content="Register Doctor" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Click="RegisterDoctorButton_Click"/>
        <Button Content="Doctor List" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,10,0,0" Click="DoctorListButton_Click"/>
        <Button Content="Delete Doctor" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="390,10,0,0" Click="DeleteDoctorButton_Click"/>

        <Button Content="Register Specialization" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,50,0,0" Click="RegisterSpecializationButton_Click"/>
        <Button Content="Specialization List" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,50,0,0" Click="SpecializationListButton_Click"/>

        <Button Content="Patient List" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,90,0,0" Click="PatientListButton_Click"/>
        <Button Content="Patient Spending" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="390,90,0,0" Click="PatientSpendingButton_Click"/>

        <Button Content="Medical Record List" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,130,0,0" Click="MedRecordListButton_Click"/>

        <Button Content="Appointment List" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,170,0,0" Click="AppointmentListButton_Click"/>

    </Grid>
</Window>
