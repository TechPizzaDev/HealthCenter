<Window x:Class="HealthCenter.Views.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCenter.Views"
        mc:Ignorable="d"
        Title="HealthCenter - Doctor" Height="500" Width="800">
    <Grid>
        <DataGrid x:Name="ScheduleGrid" Width="400" Height="200" AutoGenerateColumns="True" 
                  CanUserResizeColumns="False" CanUserResizeRows="False"
                  CanUserReorderColumns="False" CanUserSortColumns="False"
                  SelectionUnit="Cell"
                  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" />
        <Button x:Name="ScheduleSaveButton" Content="Save Schedule" Width="100" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,215,10,0" Click="ScheduleSaveButton_Click"/>
    </Grid>
</Window>
