<Window x:Class="HealthCenter.RegisterPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthCenter"
        mc:Ignorable="d"
        Title="Health Center - Register Patient" Height="450" Width="420">
    <Grid>
        <Grid Width="300" Height="252" VerticalAlignment="Top" Margin="50,40,50,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>

                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="TextWrapping" Value="NoWrap"/>
                    <Setter Property="Width" Value="150"/>
                </Style>
            </Grid.Resources>

            <Label Grid.Row="0" Content="Medical Number"/>
            <TextBox Grid.Row="0" x:Name="MedicalNumTextbox" />

            <Label Grid.Row="1" Content="Password"/>
            <PasswordBox Grid.Row="1" x:Name="PasswordTextbox" 
                         HorizontalAlignment="Right"
                         VerticalAlignment="Center"
                         Width="150"/>

            <Label Grid.Row="2" Content="First Name"/>
            <TextBox Grid.Row="2" x:Name="FirstNameTextbox" />

            <Label Grid.Row="3" Content="Last Name"/>
            <TextBox Grid.Row="3" x:Name="LastNameTextbox" />

            <Label Grid.Row="4" Content="Gender"/>
            <TextBox Grid.Row="4" x:Name="GenderTextbox" />

            <Label Grid.Row="5" Content="Birthdate"/>
            <DatePicker Grid.Row="5" x:Name="BirthDatePicker" 
                         HorizontalAlignment="Right"
                         VerticalAlignment="Center"
                         Width="150"/>

            <Label Grid.Row="6" Content="Phone Number"/>
            <TextBox Grid.Row="6" x:Name="PhoneNumberTextbox" />

            <Label Grid.Row="7" Content="Address"/>
            <TextBox Grid.Row="7" x:Name="AddressTextbox" />
            
        </Grid>

        <Button x:Name="RegisterButton" Content="Register as Patient" Click="RegisterButton_Click" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40" Padding="20,5,20,5" />
    </Grid>
</Window>
